<div>
    <ul>
        {{#each otherProviders as |item|}}
            <li>
                <label>
                    <input type="checkbox" checked="{{if (if-filter item.key state) 'checked'}}" onclick={{action "changeFilter" item.key value}} disabled={{theme.isProvider}}>
                    {{filter-replace item.key filterReplace}}
                    <small>({{number-format item.doc_count}})</small>
                </label>
            </li>
        {{/each}}
        {{#if theme.isProvider}}
            <a href="/preprints/discover" onbeforeclick={{action 'click' 'link' 'Discover - Other Preprint Repositories'}}>{{t "discover.main.otherRepositories"}}</a>
        {{/if}}
    </ul>
</div>
